<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Advogacia</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />
    <link rel="stylesheet" href="~/css/estilo.css" />
</head>
<body>
    <nav class="navbar navbar-expand-lg text-uppercase fixed-top" id="mainNav">
        <div class="container">
            @{
                var y = Html.ViewData.Values.Contains("Log in");
                if (!y)
                {

                    <a class="navbar-toggler js-scroll-trigger
                        navbar-toggler-right text-uppercase
                        font-weight-bold bg-white
                        rounded btn-danger"
                       data-toggle="collapse"
                       data-target="#navbarResponsive"
                       aria-controls="navbarResponsive"
                       aria-expanded="false"
                       aria-label="Toggle navigation">
                        Menu
                    </a>
                }
            }


            <div class="collapse navbar-collapse" id="navbarResponsive">
                <ul class="navbar-nav ml-auto">

                    @{
                        var x = Html.ViewData.Values.Contains("Log in");
                        if (!x)
                        {
                            <li class="nav-item mx-0 mx-lg-1"><a class="nav-link py-3 px-0 px-lg-3 rounded  js-scroll-trigger" asp-controller="Home" asp-action="Index">Inicio</a></li>
                            <li class="nav-item mx-0 mx-lg-1 "><a class="nav-link py-3 px-0 px-lg-3 rounded js-scroll-trigger" href="#about">Sobre</a></li>
                            <li class="nav-item mx-0 mx-lg-1"><a class="nav-link py-3 px-0 px-lg-3  rounded js-scroll-trigger" href="#socios">Sócios</a></li>
                            <li class="nav-item mx-0 mx-lg-1"><a class="nav-link py-3 px-0 px-lg-3  rounded js-scroll-trigger" href="#artigos">Artigos</a></li>
                            <li class="nav-item mx-0 mx-lg-1"><a class="nav-link py-3 px-0 px-lg-3  rounded js-scroll-trigger" href="#contact">Contato</a></li>
                            <li class="nav-item mx-0 mx-lg-1"><a class="nav-link py-3 px-0 px-lg-3  rounded js-scroll-trigger" asp-area="Identity" asp-page="/Account/Login">Login</a></li>
                        }
                    }

                </ul>
            </div>
        </div>
    </nav>
    <!-- Masthead-->
    @{
        var url = Html.ViewData.Values.Contains("Log in");
        if (!url)
        {
            <header class="masthead text-dark text-center" id="header">
                <div class="container d-flex align-items-center flex-column">
                    <!-- Masthead Avatar Image-->
                    <img class="masthead-avatar mb-5" alt="" />
                    <!-- Masthead Heading-->
                    <h1 class="masthead-heading text-uppercase mb-0 text-white">Titulo</h1>
                    <!-- Icon Divider-->
                    <div class="divider-custom divider-light">
                        <div class="divider-custom-line"></div>
                        <div class="divider-custom-icon"><i class="fas fa-star"></i></div>
                        <div class="divider-custom-line"></div>
                    </div>
                    <!-- Masthead Subheading-->
                    <p class="masthead-subheading font-weight-light mb-0 text-white">Development - Web Designer - Illustrator</p>
                </div>
            </header>
        }
    }
    <br /><br />

    <div class="container" id="main">

        <main role="main" class="container">
            @RenderBody()
        </main>
    </div>
    <!-- Footer-->
    @{
        var w = Html.ViewData.Values.Contains("Log in");
        if (!w)
        {
            <footer class="footer text-center">
                <div class="container">
                    <div class="row">
                        <!-- Footer Location-->
                        <div class="col-lg-4 mb-5 mb-lg-0">
                            <h4 class="text-uppercase mb-4">Localização</h4>
                            <p class="lead mb-0">
                                Rua Bacaba 776
                                <br />
                                Campo Grande MS Brasil
                            </p>
                        </div>
                        <!-- Footer Social Icons-->
                        <div class="col-lg-4 mb-5 mb-lg-0">
                            <h4 class="text-uppercase mb-4">Redes Sociais</h4>
                            <a class="btn btn-outline-light btn-social mx-1" href="#!"><img src="~/img/fb.png" width="75" /></a>
                            <a class="btn btn-outline btn-social mx-1" href="#!"><img src="~/img/instagram.png" width="55"></a>

                        </div>
                        <!-- Footer About Text-->
                        <div class="col-lg-4">
                            <h4 class="text-uppercase mb-4">Desenvolvedora/Analista <br />Resposável</h4>
                            <p class="lead mb-0 text-center">
                                Ana Paula Chaves,Analista e Desenvolvedora Web

                            </p>
                        </div>
                    </div>
                </div>
            </footer>

            <!-- Bootstrap core JS-->

        }

    }
    <script src="~/lib/jquery/dist/jquery-3.5.1.min.js"></script>
    <script src="~/lib/jquery/dist/bootstrap.bundle.min.js"></script>
    <script src="~/lib/jquery/jquery.easing.min.js"></script>
    <!-- Third party plugin JS-->
    <script src="~/lib/jquery/dist/bootstrap.bundle.min.js"></script>
    <!-- Contact form JS-->
    <script src="~/js/jqBootstrapValidation.js"></script>
    <script src="~/js/contact_me.js"></script>
    <!-- Core theme JS-->
    <script src="~/js/scripts.js"></script>
    <script src="~/js/scripts.js"></script>


    @RenderSection("Scripts", required: false)
</body>
</html>
